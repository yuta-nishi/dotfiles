[user]
name = yuta-nishi
email = ypmtk437.0209@gmail.com

[core]
editor = vim
pager = delta

[interactive]
diffFilter = delta --color-only

[include]
path = ~/dotfiles/catppuccin.gitconfig

[delta]
features = catppuccin-mocha
light = false
line-numbers = true
navigate = true
side-by-side = true

[pull]
default = current
prune = true
rebase = false

[init]
defaultBranch = main

[push]
default = current

[fetch]
prune = true

[merge]
conflictStyle = diff3

[diff]
colorMoved = default

# For use in DevContainer
[safe]
directory = /workspace
