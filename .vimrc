syntax on

set autoindent
set background=dark
set clipboard=unnamedplus
set encoding=utf-8
set expandtab
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set number
set shiftwidth=2
set showcmd
set smartcase
set tabstop=2
set wrapscan

let mapleader = "\<Space>"

inoremap jk <ESC>
nnoremap <C-h> ^
nnoremap <C-l> $
vnoremap <C-h> ^
vnoremap <C-l> $
