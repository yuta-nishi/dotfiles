syntax on

set number
set tabstop=2
set shiftwidth=2
set encoding=utf-8
set expandtab
set hlsearch
set incsearch
set ignorecase
set smartcase
set laststatus=2
set autoindent
set showcmd
set background=dark
set wrapscan

let mapleader = "\<Space>"

inoremap jk <ESC>
nnoremap <C-h> ^
nnoremap <C-l> $
nnoremap > >>
nnoremap < <<
nnoremap <Leader>m %
nnoremap <Leader>z :noh
vnoremap <C-h> ^
vnoremap <C-l> $
vnoremap <Leader>m %
